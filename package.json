{
  "name": "pod-insights",
  "version": "1.0.0",
  "type": "module",
  "description": "Podcast analysis and visualization platform",
  "main": "scripts/scrape.js",
  "scripts": {
    "scrape": "node scripts/scrape.js",
    "scrape-details": "node scripts/scrape-details.js",
    "scrape-chapters": "node scripts/scrape-chapters.js",
    "scrape-osf": "node scripts/scrape-osf.js",
    "scrape-speakers": "node scripts/scrape-speakers.js",
    "extract-topics": "node scripts/extract-topics.js",
    "extend-topics": "node scripts/generate-extended-topics.js --all",
    "normalize-topics": "node scripts/normalize-topics.js",
    "create-embeddings": "node scripts/create-embeddings.js",
    "create-rag-db": "node scripts/create-rag-db.js",
    "cluster-topics": "node scripts/cluster-topics.js",
    "topic-river": "node scripts/generate-topic-river.js",
    "episodes-mp3": "node scripts/generate-episodes-mp3.js",
    "cluster-categories": "node scripts/cluster-categories.js",
    "category-river": "node scripts/generate-category-river.js",
    "generate-umap": "node scripts/generate-topic-umap.js",
    "speaker-profiles": "node scripts/generate-speaker-profiles.js",
    "speaker-index": "node scripts/generate-speaker-index.js",
    "fix-speaker-index": "node scripts/fix-speaker-index.js",
    "ts-live": "node scripts/generate-ts-live.js --in-dir episodes --out-dir episodes --all && node scripts/generate-ts-live.js --in-dir frontend/public/episodes --out-dir frontend/public/episodes --all",
    "generate-favicon": "node scripts/generate-favicon-pngs.js",
    "test": "npm run test:frontend && npm run test:rust",
    "test:frontend": "cd frontend && npm run test:run",
    "test:rust": "cargo test --lib",
    "test:all": "npm run test:frontend && npm run test:rust"
  },
  "dependencies": {
    "puppeteer": "^24.0.0",
    "umap-js": "^1.4.0"
  },
  "devDependencies": {
    "sharp": "^0.33.5"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
